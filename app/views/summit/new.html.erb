
<div class="container">
	<div class="progress_bar">
		<ul id="steps">
			<div id="squeeze">
				<div id="scrollBar"></div>
			</div>
			
			<li class="step basic active"><a href="#form-basic">Basic</a>
				<div class="dot-surround"><div class="dot"></div>
				<div class="dot-white"></div>
				<div class="dot-blue"></div></div>
			</li>
			<li class="step location"><a href="#form-location">Location</a>
				<div class="dot-surround"><div class="dot"></div>
				<div class="dot-white"></div>
				<div class="dot-blue"></div></div>
			</li>
			<li class="step short_a"><a href="#form-short-answer">Short Answer</a>
				<div class="dot-surround"><div class="dot"></div>
				<div class="dot-white"></div>
				<div class="dot-blue"></div></div>
			</li>
			<li class="step long_a"><a href="#form-long-answer">Long Answer</a>
				<div class="dot-surround"><div class="dot"></div>
				<div class="dot-white"></div>
				<div class="dot-blue"></div></div>
			</li>
			<li class="step done"><a href="#form-done">Done!</a>
				<div class="dot-surround"><div class="dot"></div>
				<div class="dot-white"></div>
				<div class="dot-blue"></div></div>
			</li>
			<span class="stretch"></span>
		</ul>
	</div>
	<%= form_for @user, url:"/summit/new", :html => {:id => "summit_app"} do |f| %>
	<!-- <form action="" method="post"> -->
		<div class="pane control-group" id="form-basic">
			<div class="row heading">
				<h2 class="col s10 offset-s1 center-align">On to the questions.</h2>
				<h3 class="col s10 offset-s1 center-align">Let's get to know you.</h3>
			</div>
			<div class="row">
				<div class="col s4 input-field">
					<input type="text" id="first_name" name="user[first_name]" class="validate" />
					<label data-error="Please fill this in." for="first_name">First Name</label>
				</div>
				<div class="col s4 input-field">
					<input type="text" id="last_name" name="user[last_name]" class="validate" />
					<label data-error="Please fill this in." for="last_name">Last Name</label>
				</div>
				<div class="col s4 input-field">
					<input type="text" id="email" name="user[email]" class="validate" />
					<label data-error="Please fill this in." for="email">Email Address</label>
				</div>
			</div>
			<div class="row">
				<div class="col s4 input-field gender">
					<div>
						<input type="radio" name="summit[6]" id="male" value="Male" class="with-gap" />
						<label data-error="Please fill this in." for="male">Male</label>
					</div>
					<div>
						<input type="radio" name="summit[6]" id="female" value="Female" class="with-gap" />
						<label data-error="Please fill this in." for="female">Female</label>
					</div>
					<div>
						<input type="radio" name="summit[6]" id="decline" value="Decline to State" class="with-gap" />
						<label data-error="Please fill this in." for="decline">Decline to State</label>
					</div>
				</div>
				<div class="col s4 input-field birthday">
					<div class="label-heading">Birthday</div>
					<div>
						<select id="birth-month" class="validate" data-error="Please fill this in.">
